<view class="tabbar">
  <view class="tab-item" data-index="0" bindtap="onTabTap">
    <view class="tab-icon {{selected===0?'active':''}}">
      <text class="icon">🏃</text>
    </view>
    <text class="tab-text {{selected===0?'active':''}}">活动</text>
  </view>
  <view class="tab-item" data-index="1" bindtap="onTabTap">
    <view class="tab-icon {{selected===1?'active':''}}">
      <text class="icon">👥</text>
    </view>
    <text class="tab-text {{selected===1?'active':''}}">俱乐部</text>
  </view>
  <view class="tab-item" data-index="2" bindtap="onTabTap">
    <view class="tab-icon-create {{selected===2?'active':''}}">
      <text class="icon-plus">+</text>
    </view>
    <text class="tab-text {{selected===2?'active':''}}">发布</text>
  </view>
  <view class="tab-item" data-index="3" bindtap="onTabTap">
    <view class="tab-icon {{selected===3?'active':''}}">
      <text class="icon">💬</text>
    </view>
    <text class="tab-text {{selected===3?'active':''}}">消息</text>
  </view>
  <view class="tab-item" data-index="4" bindtap="onTabTap">
    <view class="tab-icon {{selected===4?'active':''}}">
      <text class="icon">👤</text>
    </view>
    <text class="tab-text {{selected===4?'active':''}}">我的</text>
  </view>
</view>
