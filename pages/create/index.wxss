.page {
  background-color: #f6f7f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background-color: #f6f7f8;
  border-bottom: 1rpx solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #101822;
}

.spacer-small {
  width: 48rpx;
}

/* Form Container */
.form-container {
  flex: 1;
  padding-bottom: 200rpx;
}

/* Form Section */
.form-section {
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.section-heading {
  font-size: 44rpx;
  font-weight: 700;
  color: #101822;
  margin-bottom: 32rpx;
  display: block;
}

/* Form Fields */
.form-field {
  margin-bottom: 32rpx;
}

.form-field.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.field-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #101822;
  margin-bottom: 16rpx;
}

.required {
  color: #dc3545;
  margin-left: 4rpx;
}

.field-input {
  width: 100%;
  height: 112rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #101822;
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  box-sizing: border-box;
}

.field-input::placeholder {
  color: #6c757d;
}

.field-picker {
  width: 100%;
  height: 112rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #101822;
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  color: #101822;
  flex: 1;
}

.picker-arrow {
  font-size: 20rpx;
  color: #6c757d;
  margin-left: 16rpx;
}

.field-input-with-icon {
  width: 100%;
  height: 112rpx;
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 24rpx;
}

.input-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.field-input-icon {
  flex: 1;
  font-size: 28rpx;
  color: #101822;
  border: none;
  outline: none;
}

.field-input-icon::placeholder {
  color: #6c757d;
}

.field-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 32rpx;
  font-size: 28rpx;
  color: #101822;
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.field-textarea::placeholder {
  color: #6c757d;
}

/* Publish Bar */
.publish-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: rgba(246, 247, 248, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid #e5e7eb;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.btn-publish {
  width: 100%;
  height: 112rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #4a9eff 0%, #2f85ee 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(47, 133, 238, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-publish:active {
  opacity: 0.8;
  transform: scale(0.98);
}
