.page {
  min-height: 100vh;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  padding-bottom: 16rpx;
  position: sticky;
  top: 0;
  background: linear-gradient(180deg, rgba(246, 247, 248, 0.96) 0%, rgba(246, 247, 248, 0.86) 100%);
  backdrop-filter: blur(20rpx);
  z-index: 10;
}

.spacer {
  width: 48rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 48rpx;
  color: #101822;
}

/* Hero */
.hero-card {
  margin: 0 32rpx 12rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: var(--gradient-main);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.hero-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("https://images.pexels.com/photos/868757/pexels-photo-868757.jpeg?auto=compress&cs=tinysrgb&w=1600&dpr=2");
  background-size: cover;
  background-position: center;
  opacity: 0.15;
  z-index: 0;
}

.hero-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.85) 0%, rgba(35, 194, 165, 0.75) 100%);
  z-index: 1;
}

.hero-copy {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.hero-label {
  font-size: 22rpx;
  font-weight: 700;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 1);
  color: #101822;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-emoji {
  font-size: 68rpx;
  z-index: 2;
}

/* Search Bar */
.search-container {
  padding: 24rpx 32rpx;
}

.search-bar {
  height: 96rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 16rpx;
  border: 1rpx solid rgba(47, 133, 238, 0.12);
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
}

.search-icon {
  font-size: 40rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #101822;
}

/* Filter Chips */
.filter-container {
  padding: 0 32rpx 24rpx;
}

.filter-chips {
  display: flex;
  gap: 24rpx;
  white-space: nowrap;
}

.chip-filter {
  height: 64rpx;
  padding: 0 24rpx;
  background: rgba(255, 255, 255, 0.88);
  border-radius: 26rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #101822;
  flex-shrink: 0;
  border: 1rpx solid rgba(47, 133, 238, 0.12);
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.06);
}

.chip-filter-active {
  background: #2f85ee;
  color: #ffffff;
  font-weight: 600;
  border: 1rpx solid #2f85ee;
}

.filter-arrow {
  font-size: 20rpx;
  color: #6c757d;
}

.filter-icon {
  font-size: 28rpx;
}

.sport-emoji {
  font-size: 28rpx;
}

/* Clubs List */
.clubs-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.club-card {
  background-color: rgba(255, 255, 255, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(47, 133, 238, 0.12);
  backdrop-filter: blur(10rpx);
}

.club-header {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.club-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.16), rgba(35, 194, 165, 0.2));
  flex-shrink: 0;
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.12);
}

.club-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.club-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #0d1c2b;
  line-height: 1.3;
}

.club-description {
  font-size: 24rpx;
  color: #5f6775;
  line-height: 1.4;
}

.club-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 20rpx;
  color: #0d1c2b;
}

.btn-club-action {
  min-width: 168rpx;
  height: 68rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  padding: 0 32rpx;
  flex-shrink: 0;
  box-shadow: 0 12rpx 28rpx rgba(47, 133, 238, 0.26);
}

.btn-club-join {
  background: #2f85ee;
  color: #ffffff;
}

.btn-club-joined {
  background-color: rgba(47, 133, 238, 0.12);
  color: #0d1c2b;
  box-shadow: none;
  border: 1rpx solid rgba(47, 133, 238, 0.18);
}
