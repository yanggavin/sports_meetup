.page {
  background-color: #f6f7f8;
  min-height: 100vh;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  padding-bottom: 16rpx;
  position: sticky;
  top: 0;
  background: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(20rpx);
  z-index: 10;
}

.spacer {
  width: 48rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 48rpx;
  color: #101822;
}

/* Search Bar */
.search-container {
  padding: 24rpx 32rpx;
}

.search-bar {
  height: 96rpx;
  background-color: #e5e7eb;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 16rpx;
}

.search-icon {
  font-size: 40rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #101822;
}

/* Filter Chips */
.filter-container {
  padding: 0 32rpx 24rpx;
}

.filter-chips {
  display: flex;
  gap: 24rpx;
  white-space: nowrap;
}

.chip-filter {
  height: 64rpx;
  padding: 0 24rpx;
  background-color: #e5e7eb;
  border-radius: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #101822;
  flex-shrink: 0;
}

.filter-arrow {
  font-size: 20rpx;
  color: #6c757d;
}

.filter-icon {
  font-size: 28rpx;
}

/* Clubs List */
.clubs-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.club-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e5e7eb;
}

.club-header {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.club-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 999rpx;
  background-color: #e5e7eb;
  flex-shrink: 0;
}

.club-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.club-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #101822;
  line-height: 1.3;
}

.club-description {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.4;
}

.club-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 20rpx;
  color: #6c757d;
}

.btn-club-action {
  min-width: 168rpx;
  height: 64rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  padding: 0 32rpx;
  flex-shrink: 0;
}

.btn-club-join {
  background-color: #2f85ee;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(47, 133, 238, 0.3);
}

.btn-club-joined {
  background-color: #e5e7eb;
  color: #101822;
}
