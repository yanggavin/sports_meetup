.page {
  min-height: 100vh;
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background-color: #f6f7f8;
}

.back-btn,
.settings-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon,
.settings-icon {
  font-size: 48rpx;
  color: #101822;
}

.profile-container {
  flex: 1;
}

/* Profile Header */
.profile-hero {
  margin: 16rpx 32rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.95), rgba(35, 194, 165, 0.9));
  color: #ffffff;
  box-shadow: 0 20rpx 60rpx rgba(15, 23, 42, 0.14);
}

.profile-header {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.profile-info {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
}

.profile-avatar {
  width: 192rpx;
  height: 192rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.35);
  flex-shrink: 0;
  border: 6rpx solid rgba(255, 255, 255, 0.35);
}

.profile-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

.profile-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
}

.profile-bio {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.82);
  line-height: 1.5;
}

.profile-badge {
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.92);
  border: none;
  color: #0d1c2b;
  font-size: 22rpx;
  font-weight: 700;
}

.btn-edit-profile {
  width: 100%;
  height: 80rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.18);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-highlight {
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.16);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.88);
}

/* Stats Container */
.stats-container {
  padding: 16rpx 32rpx;
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  flex: 1;
  background-color: rgba(255, 255, 255, 0.94);
  border-radius: 28rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  box-shadow: 0 16rpx 44rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(47, 133, 238, 0.12);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #101822;
}

.stat-label {
  font-size: 24rpx;
  color: #6c757d;
}

/* Sections */
.section {
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0d1c2b;
}

.view-all-link {
  font-size: 24rpx;
  font-weight: 600;
  color: #2f85ee;
}

/* Sports Tags */
.sports-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.sport-tag {
  background: rgba(47, 133, 238, 0.12);
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  border: 1rpx solid rgba(47, 133, 238, 0.18);
}

.sport-icon {
  font-size: 32rpx;
}

.sport-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #2f85ee;
}

/* Event List */
.event-list-profile,
.club-list-profile {
  background-color: rgba(255, 255, 255, 0.96);
  border-radius: 24rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  box-shadow: 0 14rpx 40rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(47, 133, 238, 0.12);
}

.event-item-profile,
.club-item-profile {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  transition: transform 0.15s ease, background-color 0.15s ease;
}

.event-item-profile:active,
.club-item-profile:active {
  background-color: rgba(47, 133, 238, 0.08);
  transform: translateY(-2rpx);
}

.event-icon-container,
.club-icon-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.16), rgba(35, 194, 165, 0.2));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.event-icon,
.club-icon {
  font-size: 48rpx;
}

.event-info,
.club-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.event-title,
.club-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #101822;
}

.event-date,
.club-members {
  font-size: 24rpx;
  color: #6c757d;
}

.chevron {
  font-size: 48rpx;
  color: #6c757d;
  flex-shrink: 0;
}
