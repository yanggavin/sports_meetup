.page {
  min-height: 100vh;
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  padding-bottom: 16rpx;
  background: linear-gradient(180deg, rgba(246, 247, 248, 0.96) 0%, rgba(246, 247, 248, 0.86) 100%);
  border-bottom: 1rpx solid rgba(47, 133, 238, 0.1);
}

.spacer {
  width: 48rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 48rpx;
  color: #101822;
}

/* Hero */
.hero-card {
  margin: 0 32rpx 12rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: var(--gradient-main);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.hero-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("https://images.pexels.com/photos/868757/pexels-photo-868757.jpeg?auto=compress&cs=tinysrgb&w=1600&dpr=2");
  background-size: cover;
  background-position: center;
  opacity: 0.15;
  z-index: 0;
}

.hero-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.85) 0%, rgba(35, 194, 165, 0.75) 100%);
  z-index: 1;
}

.hero-copy {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  position: relative;
  z-index: 2;
}

.hero-label {
  font-size: 22rpx;
  font-weight: 700;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 1);
  color: #101822;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-emoji {
  font-size: 68rpx;
  z-index: 2;
}

.search-container {
  padding: 24rpx 32rpx;
  background-color: transparent;
  position: sticky;
  top: 112rpx;
  z-index: 10;
}

.search-bar {
  height: 96rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 16rpx;
  border: 1rpx solid rgba(47, 133, 238, 0.12);
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
}

.search-icon {
  font-size: 40rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #101822;
}

.conversations-list {
  background-color: transparent;
}

.conversation-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 24rpx 32rpx;
  background-color: transparent;
  min-height: 144rpx;
  border-bottom: 1rpx solid rgba(47, 133, 238, 0.08);
}

.conv-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.16), rgba(35, 194, 165, 0.2));
  flex-shrink: 0;
  box-shadow: 0 10rpx 26rpx rgba(15, 23, 42, 0.12);
}

.conv-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.conv-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #101822;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conv-preview {
  font-size: 24rpx;
  color: #6c757d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conv-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
  flex-shrink: 0;
}

.conv-time {
  font-size: 24rpx;
  color: #8a94a6;
}

.unread-badge {
  min-width: 48rpx;
  height: 48rpx;
  padding: 0 12rpx;
  border-radius: 999rpx;
  background-color: #2f85ee;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}
