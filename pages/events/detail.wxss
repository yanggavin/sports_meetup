.page {
  background-color: #f6f7f8;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  position: sticky;
  top: 0;
  background: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

.back-btn,
.more-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 999rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon,
.more-icon {
  font-size: 48rpx;
  color: #101822;
}

/* Header Image */
.header-image {
  width: calc(100% - 64rpx);
  height: 436rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 24rpx;
  background-size: cover;
  background-position: center;
  background-color: rgba(47, 133, 238, 0.1);
}

/* Event Title */
.event-title-section {
  padding: 24rpx 32rpx;
}

.sport-icon-large {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background-color: rgba(47, 133, 238, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.sport-icon-text-large {
  font-size: 56rpx;
}

.status-chip {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  width: fit-content;
}

.status-open {
  background-color: rgba(40, 167, 69, 0.12);
  color: #28a745;
}

.status-full {
  background-color: rgba(255, 193, 7, 0.16);
  color: #d18400;
}

.status-cancelled {
  background-color: rgba(220, 53, 69, 0.12);
  color: #dc3545;
}

.event-title-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #101822;
  line-height: 1.2;
  flex: 1;
}

/* Organizer Card */
.organizer-card {
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.organizer-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 999rpx;
  background-color: #e5e7eb;
}

.organizer-label {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
}

.organizer-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #101822;
}

.btn-message {
  min-width: 168rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background-color: rgba(47, 133, 238, 0.2);
  color: #2f85ee;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.message-icon {
  font-size: 32rpx;
}

/* Info Section */
.info-section {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.info-card {
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.info-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background-color: rgba(47, 133, 238, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.info-icon {
  font-size: 48rpx;
}

.info-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #101822;
  flex: 1;
}

.info-subtext {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  margin-top: 4rpx;
}

.map-link {
  font-size: 28rpx;
  font-weight: 600;
  color: #2f85ee;
}

/* Club Section */
.club-section {
  padding: 0 32rpx 24rpx;
}

.club-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  border: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.club-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.club-label {
  font-size: 24rpx;
  color: #6c757d;
}

.club-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #101822;
}

.club-link {
  font-size: 28rpx;
  color: #2f85ee;
  font-weight: 600;
}

/* Participants */
.participants-section {
  padding: 0 32rpx 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #101822;
}

.view-all-link {
  font-size: 28rpx;
  font-weight: 600;
  color: #2f85ee;
}

.participants-avatars {
  padding-top: 16rpx;
}

.avatar-stack {
  display: flex;
  align-items: center;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 999rpx;
  border: 4rpx solid #f6f7f8;
  background-color: #e5e7eb;
}

.participant-more {
  width: 80rpx;
  height: 80rpx;
  border-radius: 999rpx;
  background-color: rgba(47, 133, 238, 0.2);
  color: #2f85ee;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #f6f7f8;
}

/* Description */
.description-section {
  padding: 0 32rpx 24rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #6c757d;
}

/* Organizer Tools */
.organizer-tools {
  padding: 0 32rpx 24rpx;
}

.tools-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.tool-btn {
  height: 96rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  color: #101822;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 1rpx solid #e5e7eb;
}

.tool-btn-danger {
  color: #dc3545;
}

.tool-btn-full {
  grid-column: span 2;
}

.tool-icon {
  font-size: 32rpx;
}

/* Action Bar */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.btn-action-primary {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  background-color: #2f85ee;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-action-primary:disabled {
  opacity: 0.6;
  background-color: #a5c8f5;
}

.btn-action-share {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background-color: rgba(47, 133, 238, 0.2);
  color: #2f85ee;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  flex-shrink: 0;
}

.share-icon {
  font-size: 48rpx;
}
