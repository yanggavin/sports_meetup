.page {
  min-height: 100vh;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  padding-bottom: 8rpx;
  position: sticky;
  top: 0;
  background: linear-gradient(180deg, rgba(246, 247, 248, 0.96) 0%, rgba(246, 247, 248, 0.8) 100%);
  backdrop-filter: blur(20rpx);
  z-index: 10;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
}

.spacer {
  width: 48rpx;
}

/* Hero */
.hero-card {
  margin: 0 32rpx 16rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: var(--gradient-main);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  position: relative;
}

.hero-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("https://images.pexels.com/photos/868757/pexels-photo-868757.jpeg?auto=compress&cs=tinysrgb&w=1600&dpr=2");
  background-size: cover;
  background-position: center;
  opacity: 0.15;
  z-index: 0;
}

.hero-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.85) 0%, rgba(35, 194, 165, 0.75) 100%);
  z-index: 1;
}

.hero-copy {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  max-width: 80%;
  position: relative;
  z-index: 2;
}

.hero-label {
  font-size: 22rpx;
  font-weight: 600;
  padding: 10rpx 20rpx;
  color: #101822;
  display: inline-flex;
  align-self: flex-start;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
}

.hero-title {
  font-size: 42rpx;
  font-weight: 800;
  line-height: 1.25;
  color: #ffffff;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-emoji {
  font-size: 72rpx;
  z-index: 1;
  transform: translateY(8rpx);
}

.hero-visual {
  display: none;
}

/* Filters */
.filter-container {
  padding: 12rpx 32rpx;
}

.filter-chips {
  display: flex;
  gap: 16rpx;
  white-space: nowrap;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 0 32rpx;
  height: 68rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.06);
}

.chip-primary {
  background: #2f85ee;
  color: #ffffff;
  font-weight: 600;
}

.chip-outline {
  background-color: rgba(255, 255, 255, 0.82);
  color: var(--ink);
  border: 2rpx solid rgba(47, 133, 238, 0.16);
}

.sport-emoji {
  font-size: 32rpx;
}

.chip-date {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 64rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.chip-date-active {
  background-color: rgba(47, 133, 238, 0.2);
  color: #2f85ee;
  font-weight: 600;
}

.chip-date-outline {
  background-color: #ffffff;
  color: #6c757d;
  border: 2rpx solid #e5e7eb;
}

/* Events List */
.events-list {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.event-card {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 28rpx;
  padding: 28rpx 28rpx 24rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.1);
  border: 1rpx solid rgba(47, 133, 238, 0.12);
  backdrop-filter: blur(16rpx);
}

.event-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.sport-icon-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, rgba(47, 133, 238, 0.12), rgba(35, 194, 165, 0.2));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.sport-icon-text {
  font-size: 56rpx;
}

.event-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: #0d1c2b;
  line-height: 1.32;
  margin-bottom: 6rpx;
}

.event-club {
  display: block;
  font-size: 24rpx;
  color: var(--muted);
}

.event-meta {
  font-size: 22rpx;
  color: #6c757d;
}

.btn-join,
.btn-joined {
  min-width: 168rpx;
  height: 72rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  padding: 0 40rpx;
  flex-shrink: 0;
}

.btn-join {
  background: #2f85ee !important;
  color: #ffffff !important;
  box-shadow: 0 10rpx 22rpx rgba(47, 133, 238, 0.2);
}

.btn-join[disabled] {
  background-color: #e8eef7;
  color: #9aa5b5;
  box-shadow: none;
  border: none;
}

.btn-joined {
  background-color: #e5f5ea;
  color: #2a9c6b;
  border: 1rpx solid #c8ebd7;
  box-shadow: none;
}

.event-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #5f6775;
}

.detail-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 36rpx;
}

.status-open {
  color: #28a745;
  font-weight: 600;
}

.status-full {
  color: #ffc107;
  font-weight: 600;
}

.status-cancelled {
  color: #dc3545;
  font-weight: 600;
}

.micro-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 999rpx;
  background-color: rgba(16, 24, 34, 0.18);
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 128rpx 32rpx;
  text-align: center;
}

.empty-icon-container {
  width: 128rpx;
  height: 128rpx;
  border-radius: 999rpx;
  background-color: rgba(47, 133, 238, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #101822;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6c757d;
}
