.page {
  background-color: #f6f7f8;
  min-height: 100vh;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  padding-bottom: 16rpx;
  position: sticky;
  top: 0;
  background: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(20rpx);
  z-index: 10;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
}

.spacer {
  width: 48rpx;
}

/* Filters */
.filter-container {
  padding: 16rpx 32rpx;
}

.filter-chips {
  display: flex;
  gap: 16rpx;
  white-space: nowrap;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 0 32rpx;
  height: 72rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.chip-primary {
  background-color: #2f85ee;
  color: #ffffff;
}

.chip-outline {
  background-color: #ffffff;
  color: #101822;
  border: 2rpx solid #e5e7eb;
}

.sport-emoji {
  font-size: 32rpx;
}

.chip-date {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 64rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.chip-date-active {
  background-color: rgba(47, 133, 238, 0.2);
  color: #2f85ee;
  font-weight: 600;
}

.chip-date-outline {
  background-color: #ffffff;
  color: #6c757d;
  border: 2rpx solid #e5e7eb;
}

/* Events List */
.events-list {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.event-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e5e7eb;
}

.event-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.sport-icon-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background-color: rgba(47, 133, 238, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.sport-icon-text {
  font-size: 56rpx;
}

.event-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #101822;
  line-height: 1.3;
  margin-bottom: 4rpx;
}

.event-club {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
}

.btn-join,
.btn-joined {
  min-width: 168rpx;
  height: 80rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  padding: 0 48rpx;
  flex-shrink: 0;
}

.btn-join {
  background-color: #2f85ee;
  color: #ffffff;
}

.btn-join[disabled] {
  opacity: 0.5;
  background-color: #a5c8f5;
  color: #ffffff;
}

.btn-joined {
  background-color: rgba(40, 167, 69, 0.2);
  color: #28a745;
}

.event-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #6c757d;
}

.detail-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 36rpx;
}

.status-open {
  color: #28a745;
  font-weight: 600;
}

.status-full {
  color: #ffc107;
  font-weight: 600;
}

.status-cancelled {
  color: #dc3545;
  font-weight: 600;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 128rpx 32rpx;
  text-align: center;
}

.empty-icon-container {
  width: 128rpx;
  height: 128rpx;
  border-radius: 999rpx;
  background-color: rgba(47, 133, 238, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #101822;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #6c757d;
}
